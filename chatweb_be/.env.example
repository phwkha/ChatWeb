# File: .env.example
# HUONG DAN: Copy file nay thanh .env va dien gia tri that cua ban vao

# --- 1. THÔNG TIN DATABASE ---
# Ten user va mat khau quan tri (Ban tu dat)
MONGO_USER=root
MONGO_PASSWORD=CHANGE_ME
MONGO_DB=chatdb

POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=postgres

# --- 2. CẤU HÌNH KẾT NỐI ---
# Neu chay Local (IntelliJ): De la localhost
# Neu chay Docker: Docker se tu dong ghi de gia tri nay (ban khong can sua)
MONGO_HOST=localhost
POSTGRES_HOST=localhost

# URL ket noi day du (Dung cho Spring Boot Local)
# Luu y: Thay user/pass o tren vao chuoi duoi day
SPRING_DATA_MONGODB_URI=mongodb://root:CHANGE_ME@localhost:27017/chatdb?authSource=admin
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/postgres

# --- 3. BẢO MẬT (JWT) ---
# Quan trong: Hay dung chuoi ngau nhien khac nhau cho moi moi truong
JWT_SECRET=Hay_Thay_Bang_Chuoi_Ky_Tu_Ngau_Nhien_Rat_Dai_Cua_Ban
JWT_EXPIRATION=3600000

# Key rieng cho moi truong Test
JWT_SECRET_TEST=Key_Test_Khong_Can_Bao_Mat